// JS code
document.addEventListener("DOMContentLoaded", function() {
  // Get the arrow-down-drop-circle-PoK image element
  var arrowDownImage = document.querySelector(".arrow-down-drop-circle-PoK");
  var arrowDownImage2 = document.getElementById("educational12");
  var arrowDownImage3 = document.getElementById("scholarship12");
  var arrowDownImage4 = document.getElementById("other12");

  // Add a click event listener to the arrow-down-drop-circle-PoK image
  arrowDownImage.addEventListener("click", function() {
    // Get the document container element
    var documentContainer = document.getElementById("documentContainer");

    // Toggle the visibility class of the auto-group-acaz-rB7 div
    documentContainer.classList.toggle("documents-visible");
  });

  arrowDownImage2.addEventListener("click", function() {
    // Get the document container element
    var documentContainer = document.getElementById("educationalDocument");

    // Toggle the visibility class of the auto-group-acaz-rB7 div
    documentContainer.classList.toggle("educational1Document");
  });

  arrowDownImage3.addEventListener("click", function() {
    // Get the document container element
    var documentContainer = document.getElementById("scholarshipDocument");

    // Toggle the visibility class of the auto-group-acaz-rB7 div
    documentContainer.classList.toggle("scholarshipDocumentvisible");
  });

  arrowDownImage4.addEventListener("click", function() {
    // Get the document container element
    var documentContainer = document.getElementById("otherDocument");

    // Toggle the visibility class of the auto-group-acaz-rB7 div
    documentContainer.classList.toggle("Otherdocuments-visible");
  });
  


});
